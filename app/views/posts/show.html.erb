<div class="container">
  <div class="header">
    <div class="row">
      <div class="col-12 text-center">
        <h2><%= @post.title %></h2>
      </div>
    </div>
  </div>
  <hr>

  <div class="post-content">
    <div class="row">
      <div class="col-12">
        <%= simple_format(@post.content, class: 'lead') %>
      </div>
    </div>
  </div>

  <hr>

  <div class="post-meta text-center">
    <div class="row">
      <div class="col-4"><i class="fas fa-user"></i> Author: <%= @post.author %></div>
      <div class="col-4"><i class="fas fa-tags"></i> Category: <%= @post.category.name %></div>
      <div class="col-4"><i class="fas fa-clock"></i> Posted at: <%= @post.created_at.strftime("%d.%m.%Y %H:%M") %></div>
    </div>
  </div>

  <div class="actions">
    <div class="row">
      <%= link_to  "Edit Post", edit_post_path, class: 'btn btn-warning' %>
    </div>
  </div>

</div>