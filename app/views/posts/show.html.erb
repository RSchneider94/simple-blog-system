<div class="container">
  <div class="header">
    <div class="row">
      <div class="col-12 text-center">
        <h2><%= @post.title %></h2>
      </div>
    </div>
  </div>
  <hr>

  <p><%= @post.content %></p>

  <hr>

  <div class="post-meta text-center">
    <div class="row">
      <div class="col-4"><%= @post.author %></div>
      <div class="col-4"><%= @post.category %></div>
      <div class="col-4"><%= @post.created_at %></div>
    </div>
  </div>

  <div class="actions">
    <div class="row">
      <%= link_to  "Edit Post", edit_post_path, class: 'btn btn-warning' %>
    </div>
  </div>

</div>