<div class="container">
  <div class="header">
    <div class="row">
      <div class="col-12 text-center">
        <h2>Posts</h2>
        <% if user_signed_in? %>
        <div class="actions text-right">
          <%= link_to '<i class="fas fa-pencil-alt text-dark"></i> New Post'.html_safe,
              new_post_path,
              class: 'text-dark' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row posts">
      <% @posts.each do |post| %>
      <div class="col-md-12 col-lg-6">
        <div class="card">
          <div class="card-body">
            <div class="post-title text-center">
              <h3><%= link_to post.title, post %></h3>
            </div>
            <div class="post-meta text-center">
              <small><i class="fas fa-user"></i> <%= post.author %></small> |
              <small><i class="fas fa-tags"></i> <%= post.category.name %></small> |
              <small><i class="fas fa-clock"></i> Posted at: <%= post.created_at.strftime("%d.%m.%Y %H:%M") %></small>
            </div>
            <hr>
            <div class="post-content text-justify">
              <p>
                <%= post.content.size > 60 ? 
                  post.content.slice(0..60) + "..." : 
                  post.content %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
  <%= will_paginate @posts, class: 'text-center' %>
</div>